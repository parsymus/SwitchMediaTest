<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:gravity="center_horizontal"
    android:background="@drawable/gradient_background"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/welcome" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/home_margin"
        android:textSize="@dimen/general_text_size"
        android:textColor="@color/general_text_gray"/>

    <TextView android:text="@string/home_text" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_margin"
        android:textSize="@dimen/general_text_size"
        android:textColor="@color/general_text_gray"/>

    <ListView
        android:id="@+id/lv_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:divider="@android:color/holo_orange_dark"
        android:dividerHeight="1px"
        android:paddingBottom="@dimen/home_margin"
        android:layout_marginTop="40dp">
    </ListView>

</LinearLayout>